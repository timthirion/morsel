# Cube with UV coordinates for texturing
# Each face has its own UV mapping showing the full texture
mtllib cube.mtl

# Front face vertices (z = 0.5)
v -0.5 -0.5  0.5
v  0.5 -0.5  0.5
v  0.5  0.5  0.5
v -0.5  0.5  0.5

# Back face vertices (z = -0.5)
v  0.5 -0.5 -0.5
v -0.5 -0.5 -0.5
v -0.5  0.5 -0.5
v  0.5  0.5 -0.5

# Top face vertices (y = 0.5)
v -0.5  0.5  0.5
v  0.5  0.5  0.5
v  0.5  0.5 -0.5
v -0.5  0.5 -0.5

# Bottom face vertices (y = -0.5)
v -0.5 -0.5 -0.5
v  0.5 -0.5 -0.5
v  0.5 -0.5  0.5
v -0.5 -0.5  0.5

# Right face vertices (x = 0.5)
v  0.5 -0.5  0.5
v  0.5 -0.5 -0.5
v  0.5  0.5 -0.5
v  0.5  0.5  0.5

# Left face vertices (x = -0.5)
v -0.5 -0.5 -0.5
v -0.5 -0.5  0.5
v -0.5  0.5  0.5
v -0.5  0.5 -0.5

# UV coordinates (V flipped for correct vertical, U normal)
vt 0 1
vt 1 1
vt 1 0
vt 0 0

usemtl material0

# Front face
f 1/1 2/2 3/3
f 1/1 3/3 4/4

# Back face
f 5/1 6/2 7/3
f 5/1 7/3 8/4

# Top face
f 9/1 10/2 11/3
f 9/1 11/3 12/4

# Bottom face
f 13/1 14/2 15/3
f 13/1 15/3 16/4

# Right face
f 17/1 18/2 19/3
f 17/1 19/3 20/4

# Left face
f 21/1 22/2 23/3
f 21/1 23/3 24/4
